---
import Sidebar from "../../components/sidebar.astro";
import Layout from "../../layouts/LayoutEditors.astro";
---

<Layout i18nTitle="indoc.title">
    <html lang="es">
        <head>
            <meta charset="UTF-8" />
            <meta
                name="viewport"
                content="width=device-width, initial-scale=1.0"
            />
            <title>InDoc - Edita texto con IA gratuitamente</title>

            <meta
                name="description"
                content="Editor de texto con IA integrada gratuito, privado y open-source"
            />

            <!-- Quill CSS -->
            <link
                href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
                rel="stylesheet"
            />

            <!-- El CSS de la página -->
            <link rel="stylesheet" href="/indoc/main.css" />

            <link rel="stylesheet" href="/css/sidebar.css" />

            <!-- Font Awesome para iconos -->
            <!-- No usamos el kit de fontawesome por que es un lío-->
            <link
                rel="stylesheet"
                href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
            />
        </head>

        <body>
            <div class="app-container">
                <!-- Header con toolbar estilo Microsoft -->
                <header class="header">
                    <div class="header-top">
                        <div class="app-title">
                            <img
                                src="https://hosted.inled.es/INDOC.png"
                                width="auto"
                                height="30px"
                            />
                            <span data-i18n="indoc.header">InDoc | Editor de texto gratuito con IA</span>
                        </div>
                    </div>

                    <Sidebar />

                    <!-- Toolbar principal -->
                    <div class="toolbar">
                        <div class="toolbar-section">
                            <button
                                class="toolbar-btn"
                                id="new-doc"
                                title="Nuevo documento"
                                data-i18n-tooltip="indoc.new"
                            >
                                <i class="fas fa-file"></i>
                                <span data-i18n="indoc.new">Nuevo</span>
                            </button>
                            <button
                                class="toolbar-btn"
                                id="open-doc"
                                title="Abrir documento"
                                data-i18n-tooltip="indoc.open"
                            >
                                <i class="fas fa-folder-open"></i>
                                <span data-i18n="indoc.open">Abrir</span>
                            </button>
                            <button
                                class="toolbar-btn"
                                id="save-doc"
                                title="Guardar en navegador"
                                data-i18n-tooltip="indoc.save"
                            >
                                <i class="fas fa-save"></i>
                                <span data-i18n="indoc.save">Guardar</span>
                            </button>
                            <!--Guarda en la memoria del navegador-->
                        </div>

                        <div class="toolbar-separator"></div>

                        <!-- Botones de exportación -->
                        <div class="toolbar-section">
                            <button
                                class="toolbar-btn"
                                id="export-pdf"
                                title="Exportar a PDF"
                                data-i18n-tooltip="indoc.pdf"
                            >
                                <i class="fas fa-file-pdf"></i>
                                <span data-i18n="indoc.pdf">PDF</span>
                            </button>
                            <button
                                class="toolbar-btn"
                                id="export-txt"
                                title="Exportar a TXT"
                                data-i18n-tooltip="indoc.txt"
                            >
                                <i class="fas fa-file-alt"></i>
                                <span data-i18n="indoc.txt">TXT</span>
                            </button>
                        </div>

                        <div class="toolbar-separator"></div>

                        <!--Aquí está la IA de Inled. A lo mejor debería hacer más grande el icono pero se me descoloca todo-->
                        <div class="toolbar-section">
                            <button
                                class="toolbar-btn"
                                id="toggle-chat"
                                title="Hablar con la inteligencia artificial de Inled."
                                data-i18n-tooltip="ai.chat"
                            >
                                <img
                                    src="inledai.svg"
                                    alt="logo Inled AI"
                                    class="ailogo"
                                />
                                <span data-i18n="ai.chat">Chat IA</span>
                            </button>
                        </div>
                    </div>
                </header>

                <!-- Contenido principal -->
                <main class="main-content">
                    <!-- Panel del editor -->
                    <div class="editor-panel">
                        <div class="editor-toolbar" id="toolbar"></div>
                        <div class="editor-container">
                            <div id="editor"></div>
                        </div>
                    </div>

                    <!-- Panel del chat (inicialmente oculto) -->
                    <div class="chat-panel" id="chat-panel">
                        <div class="chat-header">
                            <h3>
                                <img
                                    src="inledai.svg"
                                    alt="logo Inled AI"
                                    class="ailogo"
                                /> <span data-i18n="ai.title">Inled AI</span>
                            </h3>
                            <button class="chat-close" id="chat-close">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                        <div class="chat-status" id="chat-status">
                            <div class="loading-spinner"></div>
                            <span data-i18n="ai.loading">Cargando modelo de IA...</span>
                        </div>

                        <div class="chat-messages" id="chat-messages"></div>

                        <div class="chat-input-container">
                            <textarea
                                id="chat-input"
                                placeholder="Habla aquí con la IA..."
                                rows="3"
                                disabled
                                data-i18n="ai.placeholder"
                                ></textarea>
                            <div class="chat-actions">
                                <button
                                    id="send-message"
                                    class="chat-btn primary"
                                    disabled
                                >
                                    <i class="fas fa-paper-plane"></i>
                                    <span data-i18n="ai.send">Enviar</span>
                                </button>
                                <button
                                    id="insert-response"
                                    class="chat-btn secondary"
                                    disabled
                                >
                                    <i class="fas fa-plus"></i>
                                    <span data-i18n="ai.insert">Insertar</span>
                                </button>
                                <button
                                    id="copy-response"
                                    class="chat-btn secondary"
                                    disabled
                                >
                                    <i class="fas fa-copy"></i>
                                    <span data-i18n="ai.copy">Copiar</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </main>
            </div>

            <!-- Importaciones de scripts -->

            <!--Quill, el editor en el que se basa todo el percal-->
            <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

            <!--JSPDF-->
            <script
                src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"
            ></script>

            <!-- Html2Canvas para transformar el html en pdf-->
            <script
                src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"
            ></script>
            <script
                src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"
            ></script>

            <!-- Marked para renderizar el markdown que nos genera nuestra IA -->
            <script
                src="https://cdnjs.cloudflare.com/ajax/libs/marked/4.3.0/marked.min.js"
            ></script>

            <!--El módulo que le da la funcionalidad a todo esto-->
            <script is:inline type="module" src="/indoc/_main.js"></script>
        </body>
    </html>
</Layout>
